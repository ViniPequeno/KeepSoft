<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nescaupower.br.com.keepsoft.Views.Usuario.AlterarPerfilSenhaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Alterar informações pessoais" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/senhaAntiga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Senha antiga"
                    android:inputType="textPassword|textVisiblePassword" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/senhaNova"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Senha nova"
                    android:inputType="textPassword|textVisiblePassword" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/senhaNovaConfirmar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar nova senha"
                    android:inputType="textPassword|textVisiblePassword" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnAlterarPerfilSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="alterarPerfilSenha"
                android:text="Alterar @string/senha" />

            <Button
                android:id="@+id/btnAlterarPerfilSenhaCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:onClick="alterarPerfilSenhaCancelar"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
